<div class="row featured-section">
  <div class="col-12 p-0" style="background: url(<%= @article.image %>) center no-repeat; background-size: cover;">
    <div class="gradient" href="#"></div>
    <div class="featured-info pl-3 pb-2">
      <h3 class="font-weight-bold acumin-color position-relative"><%= @article.title %></h3>
    </div>
  </div>
</div>

<div class="container content bg-white rounded article mt-3 mb-3">
  <div class="row">
    <p class="col-12 mt-5 text-center">
      <%= @article.text %>
    </p>
  </div>

  <div class="row mt-3">
    <div class="col-12 text-center">
      <% if @article.votes.count > 0 %>
      <p class="w-50 m-auto font-weight-bold mt-3 alert alert-success rounded p-1"> <%= @article.votes.count %> vote(s) </p>
      <% end %>
      <% if voted?(@article) %>
      <p class="font-weight-bold mt-3"> You have already voted this article</p>
      <% else %>
      <%= link_to "Vote", add_vote_path(article_id: @article.id), class: "text-center w-25 mt-3 mb-3 p-2 bg-acumin-color text-white rounded nav-link" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center mt-5">
      <h6 class="font-weight-bold">Comments</h6>
    </div>
    <%= render partial: 'articles/comment', collection: @article.comments %>


  </div>

  <div class="row">
    <div class="col-12">
      <%= render partial: 'comments/form' %>
    </div>
  </div>
</div>
