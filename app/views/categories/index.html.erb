<div class="row featured-section">
  <div class="col-12 p-0" style="background: url(https://images.unsplash.com/photo-1582573608746-790f4d5593d7?ixid=MXwxMjA3fDB8MHxzZWFyY2h8Mnx8dmludGFnZSUyMGNhcnxlbnwwfHwwfA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60) center no-repeat; background-size: cover;">
    <div class="gradient" href="#"></div>
    <div class="featured-info pl-3 pb-2">
      <h3 class="font-weight-bold acumin-color position-relative">The vintage crew rolls into town!</h3>
      <p class="text-white position-relative">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore</h3>
    </div>
  </div>
</div>
<div class="row">
  <% @categories.each do |category| %>
  <% if category.articles.count > 0 %>
  <div class="col-6 col-md-3" style="background: url(<%= category.articles.last.image %>) center no-repeat; background-size: cover;">
    <div class="gradient" href="#"></div>
    <div class="category-title text-white font-weight-bold pt-2">
      <%= link_to category.name, category_path(category), class: "text-white position-relative" %>
    </div>
    <div class="recent-article font-weight-bold text-white pb-2">
      <%= link_to category.articles.last.title, article_path(category.articles.last), class: "text-white position-relative" %>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
